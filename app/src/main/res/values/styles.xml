<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Titles" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/titlesColor</item>
   </style>

    <style name="Titles.RoutineTitle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Titles.Welcome">
        <item name="android:textColor">@color/titleWelcome</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="Titles.AuthorTitle">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Titles.ExerciseItem">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/exerciseItemText</item>
    </style>

    <style name="Titles.Timer">
        <item name="android:textColor">@color/exerciseTimer</item>
    </style>

    <style name="Titles.PopUp">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/exerciseItemText</item>
    </style>

    <style name="Titles.PopUpSubtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/exerciseItemText</item>
    </style>

    <style name="TextBody" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textBody</item>
    </style>


    <style name="TextBody.Description">
        <item name="android:textColor">@color/primaryColor</item>

    </style>

    <style name="TextBody.Profile">
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="TextBody.Home">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textBodyHome</item>
    </style>

    <style name="TextBody.Welcome">
        <item name="android:textColor">@color/titleWelcome</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ButtonInTitle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="background">@android:color/transparent</item>
        <item name="tint">@color/titlesColor</item>
    </style>

    <style name="executionBarButtom" parent="Widget.AppCompat.Button">
        <item name="background">@android:color/transparent</item>
        <item name="tint">@color/executionBarBottom</item>
    </style>

    <style name="Buttom" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/buttomBG</item>
        <item name="android:textColor">@color/buttomText</item>
        <item name="elevation">5dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="routineCardTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="routineCardSecondary">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>

    </style>


    <style name="Toolbar_style" parent="Theme.AppCompat.Light">
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>


    <style name="ActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/thirdColor</item>
    </style>

    <style name="PopUp" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/mainTextColorAlternative</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/mainTextColorAlternative</item>
        <item name="android:background">@color/backgroundPopUp</item>
    </style>


</resources>